{
  "server": {
    "port": 3001,
    "host": "localhost"
  },
  "database": {
    "url": "mongodb://ekub_user:ekub_password@localhost:27021/ekub-app?authSource=ekub-app",
    "name": "ekub-app",
    "options": {
      "maxPoolSize": 10,
      "serverSelectionTimeoutMS": 5000,
      "socketTimeoutMS": 45000
    }
  },
  "jwt": {
    "accessExpiry": "15m",
    "refreshExpiry": "30d"
  },
  "cors": {
    "origins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "https://yourdomain.com"
    ]
  },
  "logging": {
    "filename": "logs/app.log",
    "maxSize": "20m",
    "maxFiles": "14d",
    "mongodb": {
      "enabled": true,
      "collection": "logs",
      "level": "info"
    }
  },
  "email": {
    "service": "gmail"
  },
  "sms": {
    "provider": "twilio"
  },
  "fileUpload": {
    "allowedTypes": ["image/jpeg", "image/png", "image/gif"]
  },
  "rateLimiting": {
    "message": "Too many requests from this IP, please try again later."
  }
}